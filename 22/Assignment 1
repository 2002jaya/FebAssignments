n=int(input())

for i in range(1,n):

    for s in range(n-i,0,-1):

        print(' ',end='')

    for k in range(1,i+1):

        print('*',end=' ')

    print('')

for i in range(1,n+1):

    for s in range(1,i+1):

        print(' ',end='')

    for j in range(i,n):

        print('*',end=' ')

    print('')
